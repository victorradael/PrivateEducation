{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a id="new" href="/teachers/create">New Teacher</a>
            <form action="/teachers" method="GET">
                <input type="text" name="filter" placeholder="Name or specialty" value="{{filter}}">
                <button type="submit">Filter</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Specialty</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url('{{teacher.avatar_url}}')"></span>
                            {{teacher.name}}
                        </td>
                        <td class="services">{{teacher.subjects_taught}}</td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">Show</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>

    </div>

{% endblock %}
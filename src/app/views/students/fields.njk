<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value={{student.avatar_url}}>
    </div>
</div>

<div class="item">
    <div>Student</div>
    <div>
        <input type="text" name="name" placeholder="Name of Student (Full)" value={{student.name}}>
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="gym@gym.com" value={{student.email}}>
    </div>
</div>

<div class="item">
    <div>Birthday</div>
    <div>
        <input type="date" name="birth_date" value={{student.birth_date}}>
    </div>
</div>

<div class="item">
    <div>Educational Level</div>
    <div>
        <select name="grade">
            <option value="5th grade"{% if student.grade == "5th grade"%}selected{%endif%}>
            5th grade
            </option>
            <option value="6th grade"{% if student.grade == "6th grade"%}selected{%endif%}>
            6th grade
            </option>
            <option value="7th grade"{% if student.grade == "7th grade"%}selected{%endif%}>
            7th grade
            </option>
            <option value="8th grade"{% if student.grade == "8th grade"%}selected{%endif%}>
            8th grade
            </option>
            <option value="9th grade"{% if student.grade == "9th grade"%}selected{%endif%}>
            9th grade
            </option>
            <option value="1st high school"{% if student.grade == "1st high school"%}selected{%endif%}>
            1st high school
            </option>
            <option value="2st high school"{% if student.grade == "2st high school"%}selected{%endif%}>
            2st high school
            </option>
            <option value="3st high school"{% if student.grade == "3st high school"%}selected{%endif%}>
            3st high school
        </select>
    </div>
</div>

<div class="item">
    <div>Teachers</div>
    <div>
        <select name="teacher">
            {% for teacher in teacherOptions %}
            <option value="{{teacher.id}}" {% if member.teacher_id == teacher.id %}selected{%endif%}>
                {{teacher.name}}
            </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Available workload (hours)</div>
    <div>
        <input type="number" name="available_workload" value={{student.available_workload}}>
    </div>
</div>

<button type="submit">Save</button>